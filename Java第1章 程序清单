//1-1
public class Welcome {
	public static void main(String[] args) {
		// Display message Welcome to Java! on the console
		System.out.println("Welcome to Java!");
	}
}

//1-2
public class WelcomeWithThreeMessages {
	public static void main(String[] args) {
		System.out.println("Programming is fun!");
		System.out.println("Fundamentals First");
		System.out.println("Problem Driven");
	}
}

//1-3
public class ComputeExpression {
	public static void main(String[] args) {
		System.out.println((10.5 + 2 * 3) / (45 - 3.5));
	}
}

//1-4
public class ShowSyntaxErrors {
	public static main(String[] args) {   //错误，main前遗漏关键字void
		System.out.println("Welcome to Java);     //错误，字符串应该加上引号*
	}
}

//1-5
public class ShowRuntimeErrors {
	public static void main(String[] args) {
		System.out.println(1 / 0);    //运行时错误(runtime error), 0作除数
	}
}

//1-6
public class ShowLogicErrors {
	public static void main(String[] args) {
		System.out.println("Celsius 35 is Fahrenheit degree ");
		System.out.println((9 / 5) * 35 + 32);    //逻辑错误(logic error), 整数相除返回整数部分，这里应该是9.0 / 5
	}
}
